%li.mypage__tabs__info__list
  = link_to edit_product_path(product.id),class: "mypage__tabs__info__list__link" do
    = image_tag "https://static.mercdn.net/images/mercari_profile.png",size: "48x48"
    .mypage__tabs__info__list__link__message
      %p.mypage__tabs__info__list__link__message__title= product.name
      %p.mypage__tabs__info__list__link__message__when
        = fa_icon("heart")
        %span= fa_icon("comment")
        %span 出品中
    = fa_icon("chevron-right")
