= render "shared/header"
.show-main
  .main-body
    .item-conteiner
      .item-name= @product.name
      .item-main-content
        .item-main-content__photo
          .item-main-content__photo__main
            = link_to '/products/1' do
              = image_tag @product.images[0],size: "300x300"
          .item-main-content__photo__sub
            .item-main-content__photo__sub__1.opacity
              -(0...@product.images.count).each do |image|
                = image_tag (@product.images[image]),size: "75x75"
        .item-detail
          %table
            %tbody
              %tr
                %th
                  出品者
                %td
                  .td-link
                    = link_to new_profile_path do
                      = @product.user.nickname
                  .item-detail-evaluation
                    .item-detail-evaluation__1
                    %button#eva_good
                    #disp_count1 0
                    -# @profile.eva_good
                    .item-detail-evaluation__2
                    %button#eva_normal
                    #disp_count2 0
                    -# @profile.eva_normal
                    .item-detail-evaluation__3
                    %button#eva_but
                    #disp_count3 0
                    -# @profile.eva_but
              %tr
                %th
                  カテゴリー
                %td= @product.parent_category.name
              %tr
                %th
                  ブランド
                %td
                  コーチ
              %tr
                %th
                  商品の状態
                %td
                  = @product.status.name
              %tr
                %th
                  配送料の負担
                %td
                  = @product.delivery_fee.name
              %tr
                %th
                  配送の方法
                %td
                  らくらくメルカリ便
              %tr
                %th
                  配送元地域
                %td
                  = @product.prefecture.name
              %tr
                %th
                  発送日の目安
                %td
                  1日〜2日で発送
      .item-price-box
        .item-price-box__price
          = '¥' + number_with_delimiter(@product.price)
        .item-price-box__tax-delivaly
          .item-price-box__tax
            (税込)
          .item-price-box__delivaly-fee
            =  @product.delivery_fee.name
      -if @product.purchased
        .sold-submit
          .sold-submit__text 売り切れました
      -else
        = link_to confirm_buy_product_path(@product.id),class:"sold-submit__link" do
          .sold-submit-red
            .sold-submit-red__text 購入する
