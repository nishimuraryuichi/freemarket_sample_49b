.white-wrap
  .inner-header
    .inner-header__top
      .inner-header__top__wrap
        %h1.inner__header__top__wrap__title
          =link_to root_path do
            =image_tag "https://www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?570108281", size: "134x36", alt: "mercari"
        %ul.inner__header__top__minilogo
          -# この下は -if current_user
          %li.inner-header__bottom__right__left
            =link_to '/products', class:'access-btn' do
              =fa_icon("bell")
          %li.inner-header__bottom__right__center
            =link_to '/products', class:'access-btn' do
              =fa_icon("check")
          %li.inner-header__bottom__right__right
            =link_to '/profiles/1', class:'access-btn' do
              =fa_icon("user-circle")
