        -#   =link_to '新規会員登録', new_user_path,class: 'new-user-btn-long'
      %form.inner-header__top__form
        %input.inner-header__top__form__text{type: "text",name: "keyword", placeholder: "何かお探しですか？"}
        =link_to '/products' do
          =fa_icon("search")
    .inner-header__bottom
      %ul.inner-header__bottom__left
        %li.inner-header__bottom__left__left
          %h2.inner-header__botom__left__left__nav
            =link_to category_parents_path,class:'access-btn' do
              =fa_icon("align-justify")
              %span カテゴリーから探す
        %li.inner-header__bottom__left__right
          %h2.inner-header__botom__left__right__nav
            =link_to '/products',class:'access-btn' do
              =fa_icon("tag")
              %span ブランドから探す
      %ul.inner-header__bottom__right
        -# この下は -if current_user
        %li.inner-header__bottom__right__left
          =link_to '/products', class:'access-btn' do
            =fa_icon("bell")
            %span.logo-text お知らせ
        %li.inner-header__bottom__right__center
          =link_to '/products', class:'access-btn' do
            =fa_icon("check")
            %span.logo-text やることリスト
        %li.inner-header__bottom__right__right
          =link_to '/profiles/1', class:'access-btn' do
            =fa_icon("user-circle")
            %span.logo-text マイページ
